<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BBECF7"
    tools:context=".LoginActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/goldman_sachs_logo"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="50dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/log_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "EMPLOYEE LOGIN PANEL"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#0E0801"/>

            <EditText
                android:layout_marginTop="70dp"
                android:id="@+id/log_username"
                android:inputType="text"
                android:drawableEnd="@drawable/ic_username_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="USER NAME"
                />
            <EditText
                android:id="@+id/log_password"
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_lock_black_24dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="PASSWORD"/>

            <Button
                android:id="@+id/loginuser"
                android:layout_marginStart="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="LOGIN"

                />

            <Button
                android:id="@+id/signupuser"
                android:layout_marginStart="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Sign up"

                />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onFaceBookLogin"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" />
            <Button
                android:id="@+id/forgotpassword"
                android:layout_marginStart="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Forgot "

                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>